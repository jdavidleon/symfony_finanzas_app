{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}

    <table>
        <tr>
            <th>ID</th>
            <th>Deuda</th>
            <th>Pendente por pagar</th>
            <th>Proximo pago</th>
            <th>Accion</th>
        </tr>
        {% for consume in consumes %}
            <tr>
                <td>{{ consume.consume_id }}</td>
                <td>{{ consume.description }}</td>
                <td>$ {{ consume.pending_amount|number_format(2) }}</td>
                <td>$ {{ consume.total_amount|number_format(2) }}</td>
                <td><a href="{{ path('pay_consume', {'cardConsume' : consume.consume_id}) }}">Pagar</a></td>
            </tr>
        {% endfor %}
    </table>

    <table>
        <tr>
            <th></th>
        </tr>
    </table>


{% endblock %}
