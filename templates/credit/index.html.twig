    <table>
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Code</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Dues</th>
            <th>Description</th>
        </tr>
    </table>

{% endblock %}
